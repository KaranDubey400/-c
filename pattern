Sample Input :
5
Sample Output :
        1
       212
      32123
     4321234
    543212345

code------
#include <iostream>
using namespace std;

int main(){
  int n;
  cin>>n;

  int i=1;
  
  while(i<=n){
      int val=i;
      int k=1; 
      while(k<=n-i){
        cout<<" ";
        k++;
      }
       int j=1;
      while(j<=i){
        cout<<val;
        val--;
        j++;
      }
      
          int p=2;
      int kar=2;
      while(p<=i){
        cout<<kar;
        kar++;
        p++;
      }

     cout<<endl;
     i++;

  }
}

